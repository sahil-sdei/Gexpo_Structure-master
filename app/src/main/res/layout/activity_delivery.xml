<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundGrey">

        <ScrollView
            android:id="@+id/scrollViewParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar_layout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin3dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/margin15dp">

                    <ggn.home.help.utils.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emilly Smith"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text14sp" />

                    <ggn.home.help.utils.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5dp"
                        android:text="C/o Puma pvt. ltd. Level - 6, E-196"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text14sp" />

                    <ggn.home.help.utils.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5dp"
                        android:text="Industrial Estate, NY, 10003"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text14sp" />

                    <ggn.home.help.utils.widgets.CustomButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin20dp"
                        android:background="#FF7A69B0"
                        android:padding="@dimen/margin13dp"
                        android:text="Change Address"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text16sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/margin15dp">

                    <ggn.home.help.utils.widgets.CustomTextView
                        android:id="@+id/textViewProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Memoreeta high quality colored paper album "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text14sp" />


                    <LinearLayout
                        android:id="@+id/linearLayoutPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewProduct"
                        android:layout_marginTop="@dimen/margin10dp"
                        android:orientation="horizontal">

                        <ggn.home.help.utils.widgets.CustomTextView
                            android:id="@+id/textViewPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin5dp"
                            android:text="$50"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text16sp"
                            app:fontG="Roboto-Medium.ttf" />

                        <ggn.home.help.utils.widgets.CustomTextView
                            android:id="@+id/textViewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin5dp"
                            android:layout_marginTop="@dimen/margin5dp"
                            android:text="Full Life Album"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text14sp" />

                    </LinearLayout>


                    <ggn.home.help.utils.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayoutPrice"
                        android:layout_marginTop="@dimen/margin10dp"
                        android:text="Delivery by Tue, Apr 3"
                        android:textColor="#FF696969"
                        android:textSize="@dimen/text14sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/margin15dp">

                    <ggn.home.help.utils.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Details"
                        android:textColor="#FF555555"
                        android:textSize="@dimen/text12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/margin7dp"
                        android:background="@color/greyLight" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin7dp">

                        <ggn.home.help.utils.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price (1 Full Life Album)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text12sp" />

                        <ggn.home.help.utils.widgets.CustomTextView
                            android:id="@+id/textViewPriceQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="$59"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin7dp">

                        <ggn.home.help.utils.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text12sp" />

                        <ggn.home.help.utils.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="$5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text12sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/margin7dp"
                        android:background="@color/greyLight" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin7dp">

                        <ggn.home.help.utils.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount Payable"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text12sp"
                            app:fontG="Roboto-Medium.ttf" />

                        <ggn.home.help.utils.widgets.CustomTextView
                            android:id="@+id/textViewTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="$64"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text12sp"
                            app:fontG="Roboto-Medium.ttf" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ggn.home.help.utils.widgets.CustomButton
            android:id="@+id/buttonContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/buttonBlue"
            android:text="CONTINUE"
            android:textColor="@color/white"
            android:textSize="@dimen/text16sp" />
    </RelativeLayout>
</layout>