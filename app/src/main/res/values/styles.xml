<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/greyDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/buttonBlue</item>
    </style>

    <style name="editTextTheme" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text16sp</item>
        <item name="android:padding">@dimen/margin13dp</item>
        <item name="android:textColorHint">@color/greyLight</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="editTextThemeSingleLine" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text17sp</item>
        <item name="android:textColorHint">@color/greyDark</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/margin15dp</item>
        <item name="android:paddingBottom">@dimen/margin15dp</item>
    </style>

    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">@color/greyDark</item>
        <item name="colorControlActivated">@color/greyDark</item>
        <item name="colorControlHighlight">@color/greyDark</item>
    </style>

</resources>
